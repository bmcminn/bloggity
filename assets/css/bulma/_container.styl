
.block:not(:last-child)
    margin-bottom: 1.5rem


.container
    margin: 0 auto
    position: relative


@media screen and (min-width: 1008px)
    .container
        max-width: 960px
        width: 960px

    .container.is-fluid
        margin-left: 24px
        margin-right: 24px
        max-width: none
        width: auto



@media screen and (max-width: 1199px)
    .container.is-widescreen
        max-width: 1152px
        width: auto



@media screen and (max-width: 1391px)
    .container.is-fullhd
        max-width: 1344px
        width: auto



@media screen and (min-width: 1200px)
    .container
        max-width: 1152px
        width: 1152px



@media screen and (min-width: 1392px)
    .container
        max-width: 1344px
        width: 1344px
