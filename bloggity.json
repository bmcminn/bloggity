{
  "site": {
    "language": "en-US"
  , "title": "Brandtley's Blog"
  , "description": "waffles are delicious"
  , "keywords": "waffles are delicious"
  , "baseUrl": null
  },
  // "templateEngine": "jade",
  "dest": ".dist",
  "postTypes": [
    {
      "name": "posts",
      "src": "./posts",
      "url": "blog/:title/",
      // TODO: configure :postDate; "url": "blog/:postDate-:title/",
      "template": "./templates/post",
      "sortBy": "date:asc",
      "paging": {
        "url": "blog/",
        "template": "./templates/archives.jade",
        "pageSize": "5"
      },
      "taxonomies": [
        "tags",
        "categories"
      ]
    },
    {
      "name": "projects",
      "url": "projects/:title/",
      "src": "./projects",
      "template": "./templates/project",
      "sortBy": "date:asc",
      "taxonomies": [
        "tags",
        "categories",
        "tools"
      ]
    }
  ],
  "pages": {
    "name": "pages",
    "url": "/:title/",
    "src": "./templates/pages",
    "template": "./templates/page"
  },
  "rss": {
                                        // REQUIRED PARAMETERS
                                        // ===================
    "title": null                       // {string} - Title of your site or feed
  , "description": null                 // {string} - A short description of the feed.
  , "generator": "http://bloggity.io"   // {string} - Feed generator.
  , "feed_url": "/atom.xml"             // {string} - Url to the rss feed.
  , "site_url": "/"                     // {string} - Url to the site that the feed is for.

                                        // OPTIONAL PARAMETERS
                                        // ===================
  , "image_url": "/icon.png"            // {string} - Small image for feed readers to use.
  , "docs": null                        // {string} - Url to documentation on this feed.
  , "managingEditor": null              // {string} - Who manages content in this feed.
  , "webMaster": null                   // {string} - Who manages feed availability and technical support.
  , "copyright": null                   // {string} - Copyright information for this feed.
  , "language": null                    // {string} - The language of the content of this feed.
  , "categories": null                  // {array} - One or more categories this feed belongs to.
  , "pubDate": null                     // {date} - Date object or date string The publication date for content in the feed
  , "ttl": null                         // {integer - Number of minutes feed can be cached before refreshing from source.
  , "hub": null                         // {string} - PubSubHubbub hub url Where is the PubSubHub hub located.
  , "custom_namespaces": null           // {object} - Put additional namespaces in element (without 'xmlns:' prefix)
  , "custom_elements": null             // {}
  }
}
