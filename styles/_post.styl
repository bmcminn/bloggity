
.post-head
  border-bottom: 1px solid $grey
  margin: 1em 0
  padding-bottom: 5px
  position: relative

  a
    text-decoration: none



.post-title
  float: left
  padding-right: 4.9rem
  margin: 0 0 5px
  font-size: 2rem

  @include breakpoint(big-phone)
    font-size: 1.7rem



.post-date
  position: absolute
  bottom: 10px
  right: 0
  font-size: 1.3rem
  line-height: 1.7rem
  color: $lightTextColor


.post-body
  margin-bottom: 1.2rem
  font-family: $postFont
  line-height: 1.65rem


.social
  padding: .55em 0 1.4rem


.comments
  margin-top: 1rem
  font-weight: bold
  font-size: 1.2rem

  a
    color: $lightTextColor
    text-decoration: none

  .icon-bubbles
    padding: 3px 15px 5px 0
    float: left


