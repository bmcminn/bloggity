
.name
  z-index: 100
  font-weight: normal
  font-size: 2em
  margin: 30px 0
  padding-left: 40px



nav
  height: $navHeight
  top: 0
  background: $mainTheme

  &::before
    position: relative
    height: $navHeight
    display: block

  a
    color: white
    text-decoration: none
    display: inline-block

    &:hover
      text-decoration: underline



.nav-links
  list-style: none
  background: $mainTheme

  li
    display: inline-block
