{% filter spaceless %}
{# {% autoescape on %} #}
{% filter sanitize %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset
      xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

    {% for post in posts %}
    <url>
        <loc>{{ site.url }}{{ post.route }}</loc>
        <lastmod>{{ post.updated|date('YYYY-MM-DD') }}</lastmod>
        {# <lastmod>{{ post.updated|date('YYYY-MM-DDThh:mm:ssZ') }}</lastmod> #}

        {% if post.changeFreq %}
            <changefreq>{{ post.changeFreq }}</changefreq>
        {% else %}
            <changefreq>monthly</changefreq>
        {% endif %}

        <priority>{{ post.priority|float(0.5)|parseFloat }}</priority>
    </url>
    {% endfor %}
</urlset>

{% endfilter %}
{# {% endautoescape %} #}
{% endfilter %}
