{% extends 'layout' %}


{% block content %}

    {% set breadcrumbs = post.route %}

    {% include 'partials/breadcrumbs' %}

    <div class="content">
        <h1>{{ author.name }}'s posts</h1>
    </div>

    <ul>
    {% for item in posts %}
        <li><a href="{{ item.route }}">{{ item.title }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}


{% block belowBody %}
    {% include 'partials/pagination' %}
{% endblock %}
