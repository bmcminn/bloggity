{% extends 'layout' %}


{% block content %}

    <h1>Authors</h1>

    <div class="colums">

        <ul>
        {% for author in authors %}
            <li class="column card media">
                <a href="/author/{{ author.name|slugify }}">{{ author.name }}</a>
                <a href="{{ author.website }}">Website</a>
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
