//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{site.baseUrl}#{post.url}")
      h1.post-title= post.title
    span.post-date!= [post.date.getUTCFullYear(), post.date.getUTCMonth() + 1, post.date.getUTCDate()].join(' &#183; ')

mixin post(post)
  mixin postHead(post)
  .post-body.markdown!= post.content
  .post-body.markdown!= post.content

doctype html
html(lang="#{site.language}")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon", type="image/png", href="#{site.baseUrl}images/cabin.png")
    link(href="#{site.baseUrl}styles/main.css", rel="stylesheet")
    link(rel="canonical", href="#{site.baseUrl}")
    block title
      title= "My Blog"
  body
    header.site-header
      h1.name
        a(href="#{site.baseUrl}") My Name
      nav.site-nav
        .menu.icon-menu
        ul.nav-links
          li.text-link
            a(href="#{site.baseUrl}about.html") about
          li.text-link
            a(href="#{site.baseUrl}projects.html") projects
          li.text-link
            a(href="#{site.baseUrl}archives.html") archives

      .social-media
        a.icon-github(href="https://github.com/colinwren")
        a.icon-twitter(href="https://twitter.com/colinwrenca")


    .content
      block body-content


    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js", type="text/javascript")
    script(src="#{site.baseUrl}scripts/main.js", type="text/javascript")
