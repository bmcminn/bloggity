doctype html
html(lang="#{site.language}")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")


    block title
      title= "My Blog"


    link(rel="icon", type="image/png", href="#{site.baseUrl}/images/cabin.png")
    link(href="#{site.baseUrl}/styles/main.css", rel="stylesheet")


    block meta
      if meta.description
        meta(name="description", content="#{meta.description}")
      if meta.keywords
        meta(name="keywords", content="#{meta.keywords}")


    link(rel="canonical", href="#{meta.canonical}")

    if meta.prev
      link(rel="prev", href="#{meta.prev}")
    if meta.next
      link(rel="next", href="#{meta.next}")


    block styles

    block canonical
      link(rel="canonical", href="#{site.baseUrl}/")

  body
    header.site-header
      .site-name
        a(href="#{site.baseUrl}/") My Name

      nav.site-nav
        ul.nav-links
          li.text-link
            a(href="#{site.baseUrl}/about/") About
          li.text-link
            a(href="#{site.baseUrl}/projects/") Projects
          li.text-link
            a(href="#{site.baseUrl}/blog/") Blog

      //- .social-media
      //-   a.icon-github(href="https://github.com/colinwren")
      //-   a.icon-twitter(href="https://twitter.com/colinwrenca")


    .content
      block body-content


    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js", type="text/javascript")
    script(src="#{site.baseUrl}/scripts/main.js", type="text/javascript")
